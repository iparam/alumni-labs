<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">Alumnii Labs</a>
      <div class="nav-collapse">
        <ul class="nav">
          <li class="<%= active_nav_class('home') %>"><%= link_to raw("<i class='icon-home icon-white'></i> Home"), main_app.root_path %></li>
        <% if current_user %>
          <% if  current_user.has_role?('super_admin')%>
            <li class="<%= active_nav_class('university') %>">
              <%= link_to "University", user_profile.university_profiles_path %>
            </li>
          <% end %>
        <li class="<%= active_nav_class('profile') %>">
          <%= link_to "Profile", user_profile.profile_path(current_user) %>
        </li>
        
         <% end %> 
        </ul>
        <form class="navbar-search pull-left" action="">
            <input type="text" class="search-query span2" placeholder="Search People">
          </form>
        <p class="navbar-text pull-right">
          <% if current_user %>
            Logged in as <b><%= current_user.name || current_user.email%></b>
            |
            <a href="<%=main_app.logout_path%>" class='white-link'>Logout</a>
          <% else %>
            <%= link_to "Sign up", main_app.signup_path, :class => 'white-link'%>
            |
            <%= link_to "Login", main_app.login_path, :class => 'white-link'%>
          <% end %>
        </p>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>

