<div class='well div-center width500'>
  <div>
  <h3>Sign up</h3>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |form| %>
  <%= devise_error_messages! %>
  <p>
    <label class="control-label">Name</label>
  <div class="controls">
    <%= form.text_field :name, :class => 'span3'%>
  </div>
  </p>
  <p>
  <label class="control-label">Email</label>
<div class="controls">
  <%= form.text_field :email, :class => 'span3'%>
</div>
</p>


  <p>
  <label class="control-label"><%= form.object.new_record? ? "Password" : "Change password"  %></label>
<div class="controls">
  <%= form.password_field :password, :class => 'span3' %>
</div>
</p>
<p>
  <label class="control-label">Password confirmation</label>
<div class="controls">
  <%= form.password_field :password_confirmation, :class => 'span3' %>
</div>
</p>
  <div><%= form.submit "Sign up",:class => 'btn btn-primary' %></div>
<% end %>
 </div>
 <%= render "links" %>
</div>

